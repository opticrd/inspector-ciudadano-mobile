<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Inspector.Views.AddReportPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:UIModule.Controls;assembly=UIModule"
    xmlns:mtrl="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
    xmlns:prism="http://prismlibrary.com"
    Title="Agregar reporte"
    prism:ViewModelLocator.AutowireViewModel="True">

    <ScrollView>
        <StackLayout Padding="16" Spacing="16">

            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource Subtitle2}" Text="Estado del reporte" />

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            Choices="{Binding States}"
                            ChoicesBindingName="Name"
                            ChoicesResultBindingName="State"
                            HelperText="Seleccione el estado del ticket"
                            Placeholder="Seleccione el estado"
                            ReturnType="Next"
                            SelectedChoice="{Binding StateSelected}"
                            Style="{StaticResource TextFieldChoiceStyle}" />
                    </ctrls:TextFieldLayout>

                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource Subtitle2}" Text="Detalles del cuidadano" />

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Digite su cedula"
                            Placeholder="Cedula"
                            ReturnType="Next" />
                    </ctrls:TextFieldLayout>

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Nombre completo del cuidadano"
                            IsEnabled="False"
                            Placeholder="Nombre completo"
                            ReturnType="Next" />
                    </ctrls:TextFieldLayout>

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Digite el telefono"
                            Placeholder="Telefono"
                            ReturnType="Next" />
                    </ctrls:TextFieldLayout>

                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource Subtitle2}" Text="Detalles del reporte" />

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Digite el titulo del reporte"
                            Placeholder="Titulo"
                            ReturnType="Next"
                            Text="{Binding Address.Value}" />
                    </ctrls:TextFieldLayout>

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Digite la dirección del incidente"
                            Placeholder="Calle, número, cuidad"
                            ReturnType="Next"
                            Text="{Binding Address.Value}" />
                    </ctrls:TextFieldLayout>

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Seleccione la zona"
                            Placeholder="Zona"
                            ReturnType="Next"
                            Style="{StaticResource TextFieldChoiceStyle}">
                            <mtrl:MaterialTextField.Choices>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>1</x:String>
                                    <x:String>2</x:String>
                                    <x:String>3</x:String>
                                </x:Array>
                            </mtrl:MaterialTextField.Choices>
                        </mtrl:MaterialTextField>
                    </ctrls:TextFieldLayout>

                    <!--<Label Style="{StaticResource Subtitle2}" Text="Tipo de incidencia" />

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Seleccione la incidencia"
                            Placeholder="Tipo de incidencia"
                            ReturnType="Next"
                            Style="{StaticResource TextFieldChoiceStyle}">
                            <mtrl:MaterialTextField.Choices>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Servicios</x:String>
                                    <x:String>Infraestructura</x:String>
                                    <x:String>Medio ambiente</x:String>
                                </x:Array>
                            </mtrl:MaterialTextField.Choices>
                        </mtrl:MaterialTextField>
                    </ctrls:TextFieldLayout>-->

                    <!--<ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Seleccione la categoria"
                            Placeholder="Categoria"
                            ReturnType="Next"
                            Style="{StaticResource TextFieldChoiceStyle}">
                            <mtrl:MaterialTextField.Choices>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>1</x:String>
                                    <x:String>2</x:String>
                                    <x:String>3</x:String>
                                </x:Array>
                            </mtrl:MaterialTextField.Choices>
                        </mtrl:MaterialTextField>
                    </ctrls:TextFieldLayout>

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Seleccione"
                            Placeholder="Seleccione"
                            ReturnType="Next"
                            Style="{StaticResource TextFieldChoiceStyle}">
                            <mtrl:MaterialTextField.Choices>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>1</x:String>
                                    <x:String>2</x:String>
                                    <x:String>3</x:String>
                                </x:Array>
                            </mtrl:MaterialTextField.Choices>
                        </mtrl:MaterialTextField>
                    </ctrls:TextFieldLayout>-->

                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource Subtitle2}" Text="Pruebas" />
                    <mtrl:MaterialButton Style="{StaticResource ButtonOutlined}" Text="Adjuntar pruebas" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource Subtitle2}" Text="Observaciones" />

                    <ctrls:TextFieldLayout>
                        <mtrl:MaterialTextField
                            HelperText="Digite su comentario"
                            Placeholder="Comentario"
                            ReturnType="Done"
                            Text="{Binding Comments}" />
                    </ctrls:TextFieldLayout>

                </StackLayout>
            </Frame>


            <Frame
                Margin="-16,0,-16,-16"
                Style="{StaticResource ButtonFrame}"
                VerticalOptions="EndAndExpand">
                <mtrl:MaterialButton Style="{StaticResource ButtonPrimary}" Text="Crear reporte" />
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>